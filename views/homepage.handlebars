<div class="blog-list">
  {{#each blogs as |blog|}}
    <article class="blog">
      <a href="/blog/{{id}}">
        <div class="title">
          {{title}}
        </div>
        <div class="info">
          By
          {{user.username}}
          on
          {{format_date createdAt}}
          |
          <span>{{comments.length}}
            {{format_plural "comment" comments.length}}</span>
        </div></a>
    </article>
  {{/each}}
</div>